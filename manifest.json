{
  "manifest_version": 3,
  "name": "QsenseAI ðŸ¤–",
  "version": "1.0",
  "description": "Your Curiosity Companion ðŸ§  - Explore & Learn with AI! âœ¨",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "audioCapture",
    "microphone",
    "tts",
    "storage",
    "http://localhost/*",
    "https://localhost/*",
    "http://localhost/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [{
    "resources": ["*"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "http://localhost:*",
    "https://localhost:*",
    "http://localhost:*/*",
    "*://*/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; media-src 'self' blob:"
  }
}