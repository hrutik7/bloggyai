{
  "manifest_version": 3,
  "name": "GoroAI ðŸ¤–",
  "version": "1.0",
  "description": "Your Curiosity Companion ðŸ§  - Explore & Learn with AI! âœ¨",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
     "audioCapture",
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [{
    "resources": ["*"],
    "matches": ["https://*/*"]
  }],
  "host_permissions": [
    "http://localhost:*",
    "https://localhost:*",
    "http://localhost:*/*",
    "*://*/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' https://*;"
  }
}